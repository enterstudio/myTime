{% autoescape off %}

.well.well-small
  h4.boxTitle.well Classes

  if(classes.length == 0)
    .alert.alert-warning You don't have any classes!
      a.close(data-dismiss='alert', href='#') &times;

  for class in classes
    .well.well-small=class

#addClass.modal.hide.fade
  form.form-horizontal(action="/")
    .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
        h3 Add a New Class
      .modal-body
        .control-group
            label.control-label Class Name
            .controls
              input(type='text', name="class", placeholder='EECS 280')

    .modal-footer
      button.btn(data-dismiss='modal') Close
      button.btn.btn-primary(type='submit') Save changes
{% endautoescape %}