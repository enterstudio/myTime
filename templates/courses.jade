{% autoescape off %}

.well.well-small
  h4.boxTitle.well Courses
    a.btn.btn-small.addBtn.btn-primary.pull-right(href="#addClass", data-toggle='modal') &plus;
          


  .alert.alert-info.hide
    a.close(data-dismiss='alert', href='#') &times;
    p You don't have any courses!
    a.btn.btn-warning.btn-mini(href="#", role='button', disabled="disabled") Import Schedule
    a.btn.btn-success.btn-mini(data-toggle='modal', href="#addClass", role='button') Add Courses Manually  
    

  // make this async! ***
  for course in courses
    .well.well-small.entry
      .span4=course.code+" "+course.number
      .span8
        .pull-right
          span.label.label-success=course.title
      div.hide
        a.btn.btn-danger.btn-small(data-toggle='modal', href="#editClass", role='button') 
          i.icon-ban-circle
          
        a.btn.btn-success.btn-small(data-toggle='modal', href="#editClass", role='button') 
          i.icon-pencil


{% endautoescape %}