{% autoescape off %}

.well 
    form#sendFeedback(method="post", action="/feedback")
        fieldset
            legend Submit Your Feedback
            div
                input(name="name", type='text', value="#{name}")
                input(name="email", type='text', value="#{email}", readonly)
            div
                textarea(name="text", placeholder="Please provide specific details about issues or problems with the app. Compliments appreciated too.", style="width:100%; height:140px;")
            div
                button.btn(type="submit") Send Feedback

{% endautoescape %}