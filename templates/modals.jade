          li Track important assignments, tests, and classes.
          li Reflect on how you are doing during the semester.
          li Help make sure your priorities are on target. 
    .modal-footer
      //- add data-dismiss='modal',  href="#importClasses"
      //-a.btn.btn-warning(href="#", role='button', disabled="disabled", data-toggle='modal') Import Schedule 
      a.btn.btn-success(href="#addCourse", data-dismiss="modal") Get Started 
        
// account edit modal
form#editAccount.modal.hide.form-horizontal
    .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
        h3 User Settings
      .modal-body
        .control-group
            label.control-label Name:
            .controls
              input(type='text', name="name", placeholder="ex. Susie Queue", value="#{name}")

        .control-group
            label.control-label Email:
            .controls
              input(type='text', disabled="true", value="#{email}")
        .control-group
            label.control-label Major:
            .controls
              input(type="text", name="major", placeholder="ex. Phrenology", value="#{major}")
        .control-group
            label.control-label Advisor Email:
            .controls
              input(type="email", name="advisor_email", placeholder="advisor@umich.edu", value="#{advisor_email}")


    .modal-footer
      a.pull-left.btn.btn-danger(href='#{logoutUrl}')
        i.icon-ban-circle
        |   Log Out
      a.pull-left.btn(href="#welcome", data-dismiss="modal") Back to Setup
      button.btn(data-dismiss='modal') Cancel
      button#acctBtn.btn.btn-success(type='submit') Save Changes



// add class modal
form#addCourse.modal.hide.form-horizontal
    .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
        h3 Add Courses

      .modal-body
        #courseListSmall
        
        .row-fluid
          .span7
            .selector
              select.deptSelector(disabled="true")
              //-input(type="text").input-mini
            .selector
              select.numSelector(disabled="true")
              //-input(type="text").input-mini
            .selector
              select.sectSelector(disabled="true")
              //-button.btn
                i.icon-plus
          .span5
            .infoBox.well.well-small.hidden-phone --- Couse Info --- 

    .modal-footer
      button.btn.btn-info.pull-left(data-dismiss='modal') Done
      button.btn.btn-success(type='submit',id="addCourseBtn", data-loading-text="Waiting...") Add
      

// add assignment modal
form#addReminder.modal.hide
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
      h3 New Reminder

      .modal-body.reminderInputs
        #reminderAlert.alert.hide
          button.close(type='button', data-dismiss='alert') Ã—
          | Reminder title required!

        input.typeTag(type='hidden', name="type")
        .reminderTag.btn-group(data-toggle="buttons-radio")
          a.btn.active(value="") None
          a.btn(value="Homework") Homework
          a.btn(value="Project") Project
          a.btn(value="Exam") Exam
          a.btn(value="Goal") Goal
          a.btn(value="To Do") To Do

        
        .row-fluid
          .span7
            .control-group
              input.width100.reminderTitle(type='text', name="title", placeholder="Title")
            .control-group
              textarea.width100.reminderNote(name="note", placeholder="Note")
          .span5 

            .control-group
              select.input-medium.courseSelector(name="course")
            .control-group
              .input-prepend.date
                span.add-on
                  i.icon-calendar
                input(type='text', name="date", placeholder="Date", readonly)
                
          
    .modal-footer

      input.btn.pull-left(type="reset", id="rstRemindBtn") Reset
      button.btn.btn-success(type='submit',id="addRemindBtn", data-loading-text="Working...") Add

