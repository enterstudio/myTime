{% autoescape off %}
#account.modal.hide.fade
  form.form-horizontal
    .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
        h3=user
      .modal-body
        .control-group
            label.control-label(for='inputEmail') Email
            .controls
              input#inputEmail(type='text', placeholder='Email')
        .control-group
          label.control-label(for='inputPassword') Password
          .controls
            input#inputPassword(type='password', placeholder='Password')

    .modal-footer
      button.btn(data-dismiss='modal') Close
      button.btn.btn-primary(type='submit') Save changes

#addClass.modal.hide.fade
  form.form-horizontal(action="/")
    .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
        h3 Add a New Class
      .modal-body
        .control-group
            label.control-label Class Name
            .controls
              input(type='text', name="class", placeholder='EECS 280')

    .modal-footer
      button.btn(data-dismiss='modal') Close
      button.btn.btn-primary(type='submit') Save changes

{% endautoescape %}