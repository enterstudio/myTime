{% autoescape off %}


//- opens the welcome modal only if user is new
if noob 
  // new user modal
  form#welcome.modal.form-horizontal
      .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
          h3 Welcome, #{user}.

        .modal-body
          //h3 myTime can help you stay organized!
          h4 Get the grades you want, with myTime!
          ul
            //li Sync your classes with Google calendar.
            li Track important assignments, tests, and events.
            li Reflect on how you are doing during the semester.
            li Help make sure your priorities are on target. 
      .modal-footer
        //- add data-dismiss='modal',  href="#importClasses"
        a.btn.btn-warning(href="#", role='button', disabled="disabled", data-toggle='modal') Import Schedule 
        a.btn.btn-success(data-dismiss='modal', href="#addClass", role='button', data-toggle='modal') Add Manually  
        
// account edit modal
form#account.modal.hide.form-horizontal
    .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
        h3=user
      .modal-body
        .control-group
            label.control-label Name:
            .controls
              input(type='text', placeholder="ex. Susie Queue")
        .control-group
            label.control-label Class Year:
            .controls
              select.years
                option(val="Freshman") Freshman
                option(val="Sophomore") Sophomore
                option(val="Junior") Junior
                option(val="Senior") Senior
                option(val="Grad. Student") Grad. Student
        .control-group
            label.control-label Major:
            .controls
              input(type="text", placeholder="ex. Phrenology")
        .control-group
            label.control-label Advisor Email:
            .controls
              input(type="email", placeholder="advisor@umich.edu")


    .modal-footer
      a.pull-left.btn.btn-danger(href='#{logoutUrl}')
        i.icon-ban-circle
        |   Log Out
      button.btn(data-dismiss='modal') Cancel
      button.btn.btn-success(type='submit') Save Changes



// add class modal
form#addClass.modal.hide.form-horizontal
    .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
        h3 Add Courses

      .modal-body
        #courseListSmall
        
        .row-fluid
          .span6
            select.selector.deptSelector(disabled="true")
            select.selector.numSelector(disabled="true")
            select.selector.sectSelector(disabled="true")
          .span6
            .infoBox.well.well-small.hidden-phone --- Couse Info --- 
        
    .modal-footer
      button.btn.btn-info.pull-left(data-dismiss='modal') Done
      button.btn.btn-success(type='submit',id="addClassBtn",data-loading-text="Waiting...") Add
      

// add assignment modal
form#addAssign.modal.hide.form-horizontal
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
      h3 New Assignment

      .modal-body
        .control-group
          label.control-label Title:
          .controls.form-inline
            input(type="text", name="title")

        .control-group
          label.control-label Course:
          .controls.form-inline
            select.courseSelector(name="course")
        .control-group
          label.control-label Due Date:
          .controls.form-inline
            input.date.span2(type='text', name="date", placeholder="(optional)")
                span.add-on
                  i.icon-th

    .modal-footer
      button.btn.btn-success(type='submit',id="addAssnBtn", data-loading-text="Working...") Add
      button.btn.hide(type="reset", data-dismiss='modal', id="rstAssnBtn")

// add exam modal
form#addExam.modal.hide.form-horizontal
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
      h3 New Exam

      .modal-body
        .control-group
          label.control-label Exam:
          .controls.form-inline
            input(type="text", name="title")

        .control-group
          label.control-label Course:
          .controls.form-inline
            select.courseSelector(name="course")
        .control-group
          label.control-label Date:
          .controls.form-inline
            input.date.span2(type='text', name="date", placeholder="(optional)")
                span.add-on
                  i.icon-th
    .modal-footer
      button.btn.btn-success(type='submit',id="addExamBtn", data-loading-text="Working...") Add
      button.btn.hide(type="reset", data-dismiss='modal', id="rstExamBtn")
      
{% endautoescape %}